<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:text="YOUR DEVELOPER"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:text="This App has been designed by a first time Android Developer KUNAL FARMAH."
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_115sdp"
        android:layout_above="@+id/smile"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info1"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="I have tested this app to the best of my knowlege.
If anyone finds a bug or a crash at some point, feel free to reach me at the undersigned"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:id="@+id/emailinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/me"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/mailme"
            android:layout_gravity="end"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignBottom="@+id/email"
            android:layout_toStartOf="@+id/dev"
            android:src="@drawable/gmail" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/reachme"
            android:layout_alignEnd="@+id/extra1"
            android:layout_marginLeft="@dimen/_15sdp"
            android:gravity="center"
            android:text="kunalfarmah98@gmail.com"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fbinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/emailinfo"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reachme"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/mailme"
            android:src="@drawable/fb" />

        <TextView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/reachme"
            android:layout_alignEnd="@+id/extra1"
            android:layout_marginLeft="@dimen/_15sdp"
            android:gravity="center"
            android:text="www.facebook.com/kunal.farmah"
            android:textSize="@dimen/_15sdp" />




    </LinearLayout>


    <TextView

        android:id="@+id/smile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="223dp"
        android:padding="@dimen/_5sdp"
        android:text="Cheers to ALL :)"
        android:textAlignment="center"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/me"
        android:layout_marginEnd="21dp"
        android:padding="@dimen/_5sdp"
        android:text="KUNAL FARMAH"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Name"
        android:layout_below="@+id/Name"
        android:padding="@dimen/_5sdp"
        android:text="NEW DELHI, INDIA"
        android:textSize="@dimen/_15sdp" />


    <TextView
        android:id="@+id/extra1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Name"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="103dp"
        android:text="+91 9654211634"
        android:textSize="@dimen/_15sdp" />

    <ImageView
        android:id="@+id/me"
        android:layout_width="@dimen/_134sdp"
        android:layout_height="@dimen/_104sdp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/smile"
        android:layout_marginTop="-208dp"
        android:src="@drawable/me" />





</RelativeLayout>