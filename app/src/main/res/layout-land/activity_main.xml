<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/kalc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>





    <LinearLayout
        android:id="@+id/displaytabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="DEG"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="@dimen/_35sdp"
                app:fontFamily="serif-monospace" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"

                android:textSize="@dimen/_25sdp"
                app:fontFamily="serif-monospace" />


            <TextView
                android:id="@+id/operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="."
                android:textAlignment="textEnd"

                android:textSize="@dimen/_25sdp"
                app:fontFamily="serif-monospace" />

            <TextView
                android:id="@+id/operator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="."
                android:textAlignment="textEnd"
                android:visibility="gone"

                android:textSize="@dimen/_25sdp"
                app:fontFamily="serif-monospace" />


            <TextView
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="@dimen/_25sdp"
                app:fontFamily="serif-monospace" />

        </LinearLayout>


    </LinearLayout>


    <!--<LinearLayout-->
    <!--android:id="@+id/calci"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:gravity="bottom"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_below="@+id/displaytabs"-->
    <!--android:background="#b8faff"-->
    <!--android:orientation="horizontal"-->
    <!--android:weightSum="3">-->

    <LinearLayout
        android:id="@+id/buttons"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#abcdef"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="7"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="8"


                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num9"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="9"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/c"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ccff00"
                android:text="C"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/add"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="+"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/sqrt"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="sqrt"
                android:textSize="@dimen/_13sdp" />

            <ImageButton
                android:id="@+id/backsp"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#FF0000"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"

                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="4"

                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num5"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="5"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num6"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="6"

                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/ln"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="ln"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/sub"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="-"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/e"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:scaleType="fitCenter"
                android:text="e"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/pi"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:scaleType="fitCenter"
                android:text="@string/pi"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="1"

                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="2"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num3"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="3"

                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/log"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="log"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="X"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/perc"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="%"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/pow10"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="10^x"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/numdot"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="."
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/num0"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#ceb599"
                android:text="0"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/blank"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:clickable="false"
                android:text=""
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/rem"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="REM"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/pow"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="^"
                android:textSize="@dimen/_13sdp" />


            <Button
                android:id="@+id/div"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#abcdef"
                android:text="/"
                android:textSize="@dimen/_13sdp" />


            <Button
                android:id="@+id/equals"
                android:layout_width="@dimen/_57sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="#bad000"
                android:text="="

                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/sci1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/less_than"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/scibuttons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_160sdp"
        android:layout_weight="1"
        android:background="#b8faff">

    </FrameLayout>

    <FrameLayout
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#ffffff"
        android:id="@+id/frag">
    </FrameLayout>



</RelativeLayout>